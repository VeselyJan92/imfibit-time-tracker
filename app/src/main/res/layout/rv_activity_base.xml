<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.5dp"
    android:background="#f5f5f5"
    android:elevation="2dp"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_act"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_play_circle_filled_green_45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Prace"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/chip_progress"
                app:layout_constraintEnd_toStartOf="@+id/chip_progress"
                app:layout_constraintStart_toEndOf="@+id/btn_act"
                app:layout_constraintTop_toTopOf="@+id/chip_progress" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/dr_chip_widget"
                android:padding="2dp">


                <ImageView
                    android:layout_marginStart="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_activity_check_circle_40dp">

                </ImageView>

                <TextView
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="00:00">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/indicator_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÝDEN"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/indicator_1"
                app:layout_constraintEnd_toEndOf="@+id/indicator_1"
                app:layout_constraintStart_toStartOf="@+id/indicator_1" />

            <TextView
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/indicator_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÝDEN"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/indicator_2"
                app:layout_constraintEnd_toEndOf="@+id/indicator_2"
                app:layout_constraintStart_toStartOf="@+id/indicator_2" />

            <TextView
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/indicator_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÝDEN"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/indicator_3"
                app:layout_constraintEnd_toEndOf="@+id/indicator_3"
                app:layout_constraintStart_toStartOf="@+id/indicator_3" />

            <TextView
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/indicator_label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÝDEN"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/indicator_4"
                app:layout_constraintEnd_toEndOf="@+id/indicator_4"
                app:layout_constraintStart_toStartOf="@+id/indicator_4" />

            <TextView
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/indicator_label_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYDEN"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/indicator_5"
                app:layout_constraintEnd_toEndOf="@+id/indicator_5"
                app:layout_constraintStart_toStartOf="@+id/indicator_5" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/indicator_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dr_activity_metric_indicator_completed"
                    android:gravity="center"
                    android:text="06:12"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_2"
                    app:layout_constraintEnd_toStartOf="@+id/indicator_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/btn_act"
                    app:layout_constraintTop_toTopOf="@+id/indicator_2" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/indicator_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dr_activity_metric_indicator_completed"
                    android:gravity="center"
                    android:text="06:12"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_2"
                    app:layout_constraintEnd_toStartOf="@+id/indicator_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/btn_act"
                    app:layout_constraintTop_toTopOf="@+id/indicator_2" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/indicator_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dr_activity_metric_indicator_completed"
                    android:gravity="center"
                    android:text="06:12"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_2"
                    app:layout_constraintEnd_toStartOf="@+id/indicator_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/btn_act"
                    app:layout_constraintTop_toTopOf="@+id/indicator_2" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/indicator_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dr_activity_metric_indicator_completed"
                    android:gravity="center"
                    android:text="06:12"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_2"
                    app:layout_constraintEnd_toStartOf="@+id/indicator_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/btn_act"
                    app:layout_constraintTop_toTopOf="@+id/indicator_2" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/indicator_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dr_activity_metric_indicator_completed"
                    android:gravity="center"
                    android:text="06:12"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/indicator_2"
                    app:layout_constraintEnd_toStartOf="@+id/indicator_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/btn_act"
                    app:layout_constraintTop_toTopOf="@+id/indicator_2" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>





</LinearLayout>